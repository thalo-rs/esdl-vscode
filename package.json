{
    "name": "esl",
    "displayName": "esl",
    "description": "Event Sourcing Schema Definition Language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "esl",
                "aliases": [
                    "ESL",
                    "esl"
                ],
                "extensions": [
                    ".esl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "esl",
                "scopeName": "source.esl",
                "path": "./syntaxes/esl.tmLanguage.json"
            }
        ]
    }
}
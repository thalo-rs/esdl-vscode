{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ESL",
  "patterns": [
    {
      "include": "#event-definition"
    },
    {
      "include": "#type-definition"
    },
    {
      "include": "#aggregate-definition"
    }
  ],
  "repository": {
    "event-definition": {
      "begin": "\\b(event)\\b\\s\\s*([A-Z][A-Za-z0-9]*)\\s*({)\\s*",
      "beginCaptures": {
        "1": {
          "name": "keyword.event.esl"
        },
        "2": {
          "name": "support.type.event.esl"
        },
        "3": {
          "name": "punctuation.operation.esl"
        }
      },
      "end": "\\s*(})",
      "endCaptures": {
        "1": {
          "name": "punctuation.operation.esl"
        }
      },
      "patterns": [
        {
          "include": "#field"
        }
      ]
    },
    "type-definition": {
      "begin": "\\b(type)\\b\\s\\s*([A-Z][A-Za-z0-9]*)\\s*({)\\s*",
      "beginCaptures": {
        "1": {
          "name": "keyword.type.esl"
        },
        "2": {
          "name": "support.type.type.esl"
        },
        "3": {
          "name": "punctuation.operation.esl"
        }
      },
      "end": "\\s*(})",
      "endCaptures": {
        "1": {
          "name": "punctuation.operation.esl"
        }
      },
      "patterns": [
        {
          "include": "#field"
        }
      ]
    },
    "aggregate-definition": {
      "begin": "\\b(aggregate)\\b\\s\\s*([A-Z][A-Za-z0-9]*)\\s*({)\\s*",
      "beginCaptures": {
        "1": {
          "name": "keyword.aggregate.esl"
        },
        "2": {
          "name": "variable.aggregate.esl"
        },
        "3": {
          "name": "punctuation.operation.esl"
        }
      },
      "end": "\\s*(})",
      "endCaptures": {
        "1": {
          "name": "punctuation.operation.esl"
        }
      },
      "patterns": [
        {
          "include": "#command"
        },
        {
          "include": "#command-return"
        }
      ]
    },
    "command": {
      "begin": "\\s([a-z0-9_]*)\\s*(\\()\\s*",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.esl"
        },
        "2": {
          "name": "meta.brace.round.esl"
        }
      },
      "end": "\\s*(\\))(?=:)",
      "endCaptures": {
        "1": {
          "name": "meta.brace.round.esl"
        }
      },
      "patterns": [
        {
          "include": "#params"
        }
      ]
    },
    "params": {
      "end": "\\s*,|\\)",
      "patterns": [
        {
          "include": "#param"
        }
      ]
    },
    "command-return": {
      "begin": "(:)\\s*",
      "beginCaptures": {
        "1": {
          "name": "punctuation.colon.esl"
        }
      },
      "end": "(?=\\s[a-z0-9_]*)|(?=})",
      "patterns": [
        {
          "begin": "(\\()\\s*",
          "beginCaptures": {
            "1": {
              "name": "meta.brace.round.esl"
            }
          },
          "end": "\\s*(\\))",
          "endCaptures": {
            "1": {
              "name": "meta.brace.round.esl"
            }
          },
          "patterns": [
            {
              "include": "#custom-type-ref"
            }
          ]
        },
        {
          "include": "#custom-type-ref"
        }
      ]
    },
    "ignore-spaces": {
      "match": "\\s*"
    },
    "param": {
      "begin": "\\s*([a-z0-9_]*)\\s*(:)",
      "beginCaptures": {
        "1": {
          "name": "variable.other.esl"
        },
        "2": {
          "name": "punctuation.colon.esl"
        }
      },
      "end": "(?=,|\\))",
      "patterns": [
        {
          "include": "#type-ref"
        }
      ]
    },
    "field": {
      "begin": "\\s*([a-z0-9_]*)\\s*(:)",
      "beginCaptures": {
        "1": {
          "name": "variable.other.esl"
        },
        "2": {
          "name": "punctuation.colon.esl"
        }
      },
      "end": "\\n",
      "patterns": [
        {
          "include": "#type-ref"
        }
      ]
    },
    "type-ref": {
      "patterns": [
        {
          "begin": "(\\[)\\s*",
          "beginCaptures": {
            "1": {
              "name": "meta.brace.square.esl"
            }
          },
          "end": "\\s*(\\])(?:\\s*(!))?",
          "endCaptures": {
            "1": {
              "name": "meta.brace.square.esl"
            },
            "2": {
              "name": "keyword.operator.nulltype.esl"
            }
          },
          "patterns": [
            {
              "include": "#type-ref"
            }
          ]
        },
        {
          "match": "\\s*\\b(Int|Float|String|Bool)\\b(?:\\s*(!))?",
          "captures": {
            "1": {
              "name": "support.type.builtin.esl"
            },
            "2": {
              "name": "keyword.operator.nulltype.esl"
            }
          }
        },
        {
          "include": "#custom-type-ref"
        }
      ]
    },
    "custom-type-ref": {
      "match": "\\s*([A-Z][A-Za-z0-9]*)\\s*(!)?",
      "captures": {
        "1": {
          "name": "support.type.custom.esl"
        },
        "2": {
          "name": "keyword.operator.nulltype.esl"
        }
      }
    }
  },
  "scopeName": "source.esl"
}